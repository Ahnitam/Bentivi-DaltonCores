<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FragmentoTres">

    <ImageView
        android:layout_width="411dp"
        android:layout_height="452dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_cam"
        android:contentDescription="Imagem de uma Cãmera"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Acesso a Camera"
        android:fontFamily="@font/lobstertworegular"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/arvo"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="Precisamos ter acesso a câmera para que possa ultilizar o aplicativo. Click no botão abaixo para nos dar permissão para acessar a câmera." />
    <Button
        android:id="@+id/Permissao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/arvo"
        android:text="Garanta o Acesso da Câmera"
        android:contentDescription="Dar Permissões da Câmera"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/Seguin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Concluir"
            app:backgroundTint="#FFFFFF"
            app:maxImageSize="35dp"
            android:visibility="invisible"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"
            app:srcCompat="@drawable/ic_done_black_24dp" />
    </GridLayout>

</LinearLayout>